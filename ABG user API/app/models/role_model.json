{
  "$id": "role_schema.json",
  "title": "Role Schema",
  "description": "Schema to store role details",
  "type": "object",
  "properties": {
    "role_name": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": ["active", "inactive"]
    },
    "permissions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": ["role_name", "status", "permissions"]
}
